<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpxAppEdu.View.Comunicacao"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Comunicacao"
             BackgroundColor="#BFEFFF">

    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <ImageButton Source="food.png"
                             Clicked="OnClikedFood"
                             HeightRequest="90"/>
                
                <Label Text="QUERO COMER"
                       TextColor="Black"
                       FontSize="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold"/>
                </HorizontalStackLayout>

            <HorizontalStackLayout>
                <ImageButton Source="phone.png"
                             Clicked="OnClikedLigar"
                             HeightRequest="90"/>
                
                <Label Text="QUERO FAZER UMA LIGAÇÃO"
                       TextColor="Black"
                       FontSize="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold"/>
                </HorizontalStackLayout>

            <HorizontalStackLayout>
                <ImageButton Source="water.png"
                             Clicked="OnClikedAgua"
                             HeightRequest="90"/>
                
                <Label Text="QUERO BEBER ÁGUA"
                       TextColor="Black"
                       FontSize="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold"/>
                </HorizontalStackLayout>



                <toolkit:MediaElement x:Name="MidiaAudio"
                                  VerticalOptions="EndAndExpand"
                                  IsVisible="false"
                                  ShouldShowPlaybackControls="False"
                                  Source="embed://comer.mp3"/>

                <toolkit:MediaElement x:Name="MidiaAudio1"
                                  VerticalOptions="EndAndExpand"
                                  IsVisible="false"
                                  ShouldShowPlaybackControls="False"
                                  Source="embed://ligar.mp3"/>

                <toolkit:MediaElement x:Name="MidiaAudio2"
                                  VerticalOptions="EndAndExpand"
                                  IsVisible="false"
                                  ShouldShowPlaybackControls="False"
                                  Source="embed://agua.mp3"/>


            </VerticalStackLayout>
    </ScrollView>
</ContentPage>