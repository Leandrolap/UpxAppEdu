<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpxAppEdu.View.AddItem"
             Title="AddItem">
    <ContentPage.Content>
        <StackLayout Margin="20"
                     Spacing="10"
                     VerticalOptions="StartAndExpand">
            <Label Text="Título"/>
            <Entry Text="{Binding Titulo}"/>

            <Label Text="Descrição"/>
            <Entry Text="{Binding Descricao}"/>

            <StackLayout Orientation="Horizontal">
                <Label Margin="0,10"
                       HorizontalOptions="StartAndExpand"
                       Text="Feito"/>
                <Switch HorizontalOptions="EndAndExpand"
                        IsToggled="{Binding Feito}"/>
            </StackLayout>

            <Button Clicked="OnSaveCliked" Text="Salvar"/>
            <Button Clicked="OnDeleteCliked" Text="Deletar"/>
            <Button Clicked="OnCancelarCliked" Text="Cancelar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>