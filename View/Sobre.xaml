<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpxAppEdu.View.Sobre"
             BackgroundColor="#BFEFFF"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Image Source="mente.png"
               HorizontalOptions="Center"
               HeightRequest="150"
               VerticalOptions="Start"
               Margin="0,50,0,0"/>
        
        <VerticalStackLayout VerticalOptions="Center" Margin="50">
            <Label Text="Obrigado por usar o AutMais, o aplicativo é voltado para pessoas com transtorno do espectro autismo."
              FontSize="20"
              TextColor="Black"
              FontFamily="MairyExtralight"/>
        </VerticalStackLayout>

        <VerticalStackLayout VerticalOptions="End" HorizontalOptions="Center">
            <Button Text="Versão: 1.0"
                    BackgroundColor="Transparent"
                    TextColor="#FF8C00"
                    Clicked="OnClickDev"
                    FontFamily="MairyExtralight"
                    FontSize="20"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>